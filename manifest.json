{
	"author": "igorlogius",
	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_popup": "popup.html"
	},
	"commands": {
		"save_playing_info": { "description": "Save Now Playing Info" },
		"show_playing": { "description": "Display Now Playing" },
		"toggle_fav": { "description": "Favorit Now Playing" },
		"toggle_radio": { "description": "Toggle Radio" },
		"vol_down": { "description": "Lower Radio Volume" },
		"vol_up": { "description": "Raise Radio Volume" }
	},
  	"default_area": "navbar",
	"description": "Listen to https://listen.moe",
	"icons": {
		"128": "icon.png"
	},
	"manifest_version": 2,
	"name": "Listen.moe Player",
	"options_ui": {
		"page": "options.html"
	},
	"permissions": [
		"*://*.listen.moe/*",
		"storage",
		"notifications",
		"cookies",
		"webRequest",
		"webRequestBlocking"
	],
	"version": "1.0.0"
}
