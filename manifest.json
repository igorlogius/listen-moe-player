{
	"author": "igorlogius",
	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_popup": "popup.html"
	},
	"commands": {
		"toggle_radio": {
			"description": "Toggle Radio"
		},
		"show_playing": {
			"description": "Display Now Playing"
		},
		"vol_up": {
			"description": "Raise Radio Volume"
		},
		"vol_down": {
			"description": "Lower Radio Volume"
		},
		"toggle_fav": {
			"description": "Favorit Now Playing"
		},
		"save_playing_info": {
			"description": "Save Now Playing Info"
		}
	},
	"description": "Listen to https://listen.moe",
	"icons": {
		"128": "icon.png"
	},
	"options_ui": {
		"page": "options.html"
	},
	"manifest_version": 2,
	"name": "listen.moe-slim",
	"permissions": [
		"*://*.listen.moe/*",
		"storage",
		"notifications",
		"cookies",
		"webRequest",
		"webRequestBlocking"
	],
	"version": "1.0.0"
}
